<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:contentViews="clr-namespace:CryptoBank.Views.ContentViews"
             x:Class="MAUI_Menu.Views.ContentPages.AnalyticsPage"
             Title="AnalyticsPage"
             Shell.NavBarIsVisible="False"
             BackgroundColor="DarkGreen">

    <Grid Padding="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="55"/>
        </Grid.RowDefinitions>

        <StackLayout  Grid.Row="0" Padding="0" HorizontalOptions="Center" VerticalOptions="Center">

            <Label x:Name="LBL_Text" Text="Analityc Page" TextColor="White" FontSize="24"/>

        </StackLayout>

        <StackLayout Grid.Row="1" Padding="0">

            <Border 
                HorizontalOptions="Center" HeightRequest="70" WidthRequest="400" StrokeShape="RoundRectangle 30,30,0,0"
                BackgroundColor="#161A1D" Padding="0" Stroke="Transparent">
            </Border>

            <Border 
                x:Name="LAYOUT_Menu_Select" Margin="0,-100,0,0"
                HorizontalOptions="Center" HeightRequest="90"
                Background="Transparent" Padding="0" Stroke="Transparent">

                <contentViews:OwnNavigationMenuView x:Name="ownNavigationMenuView" />
            </Border>

        </StackLayout>

    </Grid>

</ContentPage>
